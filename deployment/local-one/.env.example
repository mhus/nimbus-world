# Nimbus Local One Configuration
# Copy this file to .env and adjust values as needed

# MongoDB Configuration
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=example
MONGODB_URI=mongodb://root:example@mongodb:27017/world?authSource=admin

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_URL=redis://redis:6379

# Service URLs (internal network)
PLAYER_BASE_URL=http://world-player:9042
LIFE_BASE_URL=http://world-life:9044
CONTROL_BASE_URL=http://world-control:9043

# Nimbus Configuration
NIMBUS_ENCRYPTION_PASSWORD=changeme-in-production
NIMBUS_SCHEMA_AUTO_MIGRATE=true

# Compression Settings
CHUNK_COMPRESSION_ENABLED=true
LAYER_TERRAIN_COMPRESSION_ENABLED=true
ASSET_COMPRESSION_ENABLED=true

# Note: Frontend services are configured to use the nginx proxy
# URLs are set in docker-compose.yml to point to http://localhost:8080/api/*
